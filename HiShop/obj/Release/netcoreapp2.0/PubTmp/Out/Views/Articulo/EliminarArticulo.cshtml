@model HiShop.Entity.Articulo
@{
    ViewData["Title"] = "EliminarArticulo";
    Layout = "~/Views/Shared/_BaseMenuUsuarioRegistrado.cshtml";
}
<hr />
<div class="row">
    <div class="col-md-6 col-md-offset-4">
        <h4>Esta accion elimina permanentemente tu Articulo , estas seguro?</h4>
        <form action="/Articulo/EliminarArticulo" method="post">
            <input type="hidden" name="ID" value="@Model.ID" />

            <div class="form-group">
                <label for="Nombre" class="control-label">Nombre</label>
                <input class="form-control" name="Nombre" readonly="readonly" value="@Model.Nombre" />
            </div>
            <div class="form-group">
                <img class="imagenPerfil name="file" col-md-6" src="@Model.UrlImagen" alt="Imagen" />
                <div class="col-md-12">
                </div>
            </div>
            <div class="form-group">
                <label for="Descripcion" class="control-label">Descripcion</label>
                <input class="form-control" name="Descripcion" readonly="readonly" value="@Model.Descripcion" />
            </div>
            <div class="form-group">
                <label for="Cantidad" class="control-label">Cantidad</label>
                <input class="form-control" name="Cantidad" readonly="readonly" value="@Model.Cantidad" />
            </div>
            <div class="form-group">
                <label for="Precio" class="control-label">Precio</label>
                <input class="form-control" name="Precio" readonly="readonly" value="@Model.Precio" />
            </div>          
            <div class="form-group">
                <input type="submit" value="EliminarArticulo" class="btn btn-danger" />
                <a href="/Articulo/ListarArticulo" value="BackToList" class="btn btn-default">Volver</a>
            </div>
           
        </form>
    </div>
</div>
<hr /> 