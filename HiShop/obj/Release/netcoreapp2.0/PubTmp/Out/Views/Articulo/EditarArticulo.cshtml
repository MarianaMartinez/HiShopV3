@model HiShop.Models.ArticuloModel
@{
    ViewData["Title"] = "EditarArticulo";
    Layout = "~/Views/Shared/_BaseMenuUsuarioRegistrado.cshtml";
   
}
<h2> Editar Articulo</h2>


<div class="col-md-12">
    <form action="/Articulo/EditarArticulo" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" name="ID" value="@Model.Id" />

        <div>

        </div>
        <div class="form-group col-md-4">
            <label for="Nombre" class="control-label">Nombre (*)</label>
            <input class="form-control" name="Nombre" placeholder="Ingresá el nombre de tu negocio" value="@Model.Nombre" />
            @Html.ValidationMessage("Nombre", "", new { @class = "text-danger" })
        </div>
        <div class="form-group  col-md-4">
            <label for="Direccion" class="control-label">Descripcion</label>
            <input class="form-control" name="Descripcion" placeholder="Descripcion" value="@Model.Descripcion" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group  col-md-4">
            <label for="Cantidad" class="control-label">Cantidad</label>
            <input class="form-control" name="Cantidad" placeholder="Cantidad/Stock" value="@Model.Cantidad" />
            @Html.ValidationMessage("Cantidad", "", new { @class = "text-danger" })
        </div>
        <div class="form-group  col-md-4">
            <label for="Precio" class="control-label">Precio</label>
            <input class="form-control" name="Precio" value="@Model.Precio" />
            @Html.ValidationMessage("Precio", "", new { @class = "text-danger" })
        </div>

        <div class="form-group  col-md-4">
            <img class="imagenPerfil col-md-6" src="@Model.UrlImagen" alt="Imagen" height="120px" />
            <div class="col-md-12">
            </div>
        </div>
        <div class="form-group  col-md-4">
            <label for="UrlImagenArticulo" class="control-label">Imagen</label>
            <input type="file" name="file" id="file" src="@Model.UrlImagen" />
            @Html.ValidationMessage("UrlImagenArticulo", "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-12" >
            <button type="submit" class="btn btn-success2"><i class="zmdi zmdi-save"> </i> Guardar</button>
            <button type="button" class="btn btn-info" onclick="return history.back(1);"><i class="zmdi zmdi-long-arrow-left "> </i> Volver</button>
        </div>
    </form>
</div>
<div class="col-md-12">

<hr /> 
</div>






