@model HiShop.Entity.Servicio
@{
    ViewData["Title"] = "EliminarrServicio";
    Layout = "~/Views/Shared/_BaseMenuUsuarioRegistrado.cshtml";

}
<hr />
<div class="row">
    <div class="col-md-6 col-md-offset-4">
        <h4>Esta accion elimina permanentemente tu servicio , estas seguro?</h4>
        <form action="/Servicio/EliminarServicio" method="post">
            <input type="hidden" name="ID" value="@Model.ID" />

            <div class="form-group">
                <label for="Nombre" class="control-label">Nombre</label>
                <input class="form-control" name="Nombre" readonly="readonly" value="@Model.Nombre" />
            </div>
            <div class="form-group">
                <img class="imagenPerfil col-md-6" src="@Model.UrlImagen" alt="Imagen" />
                <div class="col-md-12">                              
                </div>
            </div>
            <div class="form-group">
                <label for="Direccion" class="control-label">Descripcion</label>
                <input class="form-control" name="Descripcion" readonly="readonly" value="@Model.Descripcion" />
            </div>          
            <div class="form-group">
                <input type="submit" value="EliminarServicio" class="btn btn-danger" />
            </div>
            <div class="form-group">
                <a href="/Servicio/ListarServicio" value="BackToList" class="btn btn-danger">Volver</a>
            </div>
        </form>
    </div>
</div>
<hr /> 