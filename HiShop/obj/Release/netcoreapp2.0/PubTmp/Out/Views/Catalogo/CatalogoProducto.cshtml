@{
    ViewData["Title"] = "CatalogoArticulo";
    Layout = "~/Views/Shared/_BaseMenu.cshtml";
}

<center><h2>Catalogo Articulo</h2></center>

<div class="btn-group btn-toggle">
    <button class="btn btn-default" data-toggle="collapse" data-target="#collapsible">Articulos</button>
    <button class="btn btn-default" data-toggle="collapse" data-target="#collapsible">Servicios</button>
</div>
<hr />
<div class="row well collapse" id="collapsible">
    <div class="col-md-6 col-md-offset-4">
        <div>
            <h3><i class="zmdi zmdi-plus-box"></i> Mis Articulos </h3>
        </div>

        <br />
        <table class="table table-responsive table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UrlImagenArticulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        Publicar
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/ImagenesServidor/ImagenesArticulos/@item.UrlImagenArticulo" alt="ImagenArticulo" width="60" height="60" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td> 
                        <td>
                            |
                            <a href="#" value="@item.ID">Facebook</a> |
                            <a href="#" value="@item.ID">Instagram</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>     
    </div>
</div>
<hr />


