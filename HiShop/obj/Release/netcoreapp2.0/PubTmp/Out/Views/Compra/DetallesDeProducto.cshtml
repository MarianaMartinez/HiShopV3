@model HiShop.Models.OrdenPedido.OrdenPedidoGeneral
@{
    ViewData["Title"] = "DetallesDeProducto";
    Layout = "~/Views/Shared/_BaseShowroom.cshtml";
}
<form action="/Compra/DetallesDeProducto" method="post">
    <br />
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 " >
                <img  src="@Model.Producto.UrlImagen" />
            </div>
        </div>
        <div class="row">
            <table>
                <tr>
                    <td>Nombre : </td>
                    <td>@Model.Producto.Nombre</td>
                </tr>
                <tr>
                    <td>Descripción :</td>
                    <td>@Model.Producto.Descripcion</td>
                </tr>
                <tr>
                    <td>Precio :</td>
                    <td>@Model.Producto.Precio</td>
                </tr>
                
                <tr>
                    <td class="btn btn-info"><a href="/Compra/EfectuarCompra/@Model.Producto.ID">Comprar</a></td>
                    <a href=""> <td class="btn btn-warning">Volver</td></a>

                </tr>
            </table>
        </div>
    </div>
</form>