@model HiShop.Models.Catalogo.VentasModelAndView

@{
    Layout = "~/Views/Shared/_BaseMenuUsuarioRegistrado.cshtml";
}

<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/css/TableStyle.css" rel="stylesheet" />
<script src="~/js/TableJS.js"></script>

<div class="container">
    <div class="row">
        <section class="container">
            <center>
                <h1 style="font-family:'Arial Rounded MT';">Mis compras</h1>
            </center>
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default" style="width:750px;margin-left:-75px;">
                    <div class="panel-body">
                        <div class="pull-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success btn-filter" data-target="pagado">Efectuadas</button>
                                <button type="button" class="btn btn-warning btn-filter" data-target="pendiente">Pendientes</button>
                                <button type="button" class="btn btn-default btn-filter" data-target="all">Todas</button>
                            </div>
                        </div>
                        <div class="table-container">
                            <table class="table table-filter text-center" style="width:720px;">
                                
                                <thead class="alert-info">
                                    <tr>
                                        <td> Estado </td>
                                        <td> Medio de Pago </td>
                                        <td> Método de Envío </td>
                                        <td> Monto </td>
                                        <td> Negocio </td> 
                                    </tr>
                                </thead>
                                
                                <tbody>
                                    @foreach (var item in Model.ordenes)
                                    {
                                        if (item.EstadoPedido == HiShop.Enum.EstadoPedido.CONCRETADO)
                                        {
                                            <tr data-status="pagado">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EstadoPedido)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Pago)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Envio)
                                                </td>
                                                <td>
                                                    $@Html.DisplayFor(modelItem => item.Total)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Negocio.Nombre)
                                                </td>
                                            </tr>
                                        }
                                    } 
                                    @foreach (var item in Model.ordenes)
                                    {
                                        if (item.EstadoPedido == HiShop.Enum.EstadoPedido.PENDIENTE)
                                        {
                                            <tr data-status="pendiente">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EstadoPedido)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Pago)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Envio)
                                                </td>
                                                <td>
                                                    $@Html.DisplayFor(modelItem => item.Total)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Negocio.Nombre)
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>